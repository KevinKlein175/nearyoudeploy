    "heroku-postbuild": "cd Codebase_Client_NearYou-main/nearyou-client && npm install && npm run build"
  },
  "dependencies": {
    "concurrently": "^6.2.1"
  },
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.7.0"
  }
}
